[alias]
	last    = log -1 HEAD

[commit]
	gpgsign = true
	verbose = true

[core]
	editor       = nvim
	excludesfile = ~/.config/git/gitignore

[diff]
	algorithm = histogram

[fetch]
	prune     = true
	prunetags = true

[filter "lfs"]
	clean    = git-lfs clean -- %f
	smudge   = git-lfs smudge -- %f
	process  = git-lfs filter-process
	required = true

[init]
	defaultbranch = main

[log]
	date = iso

[push]
	autosetupremote = true
	default         = current
	followtags      = true

[user]
	email      = mail+git@tshaka.dev
	name       = Tshaka Lekholoane
	signingkey = mail+git@tshaka.dev
