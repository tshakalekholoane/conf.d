autocmd FileType gitcommit set textwidth=72
syntax on

nmap Q <Nop>

set backspace=indent,eol,start
set colorcolumn=72,80
set encoding=utf-8
set expandtab
set ignorecase
set incsearch
set laststatus=2
set mouse+=a
set nocompatible
set nohlsearch
set nowrap
set number
set relativenumber
set shiftwidth=2
set showmatch
set smartcase
set softtabstop=2
set spell spelllang=en_gb spelloptions=camel
set tabstop=2
set termguicolors
set undofile
