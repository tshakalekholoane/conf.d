# Default.
--binarygrouping 4
--decimalgrouping 3
--header "strip"
--hexliteralcase "lowercase"
--indent 2
--swiftversion 5.8
--wraparguments "before-first"
--wrapcollections "before-first"
--wrapparameters "before-first"

# Opt-in.
--enable acronyms
--enable blankLineAfterImports
--enable blankLinesBetweenImports
--enable docComments
--enable isEmpty
--enable sortedSwitchCases
